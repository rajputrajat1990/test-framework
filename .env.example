# Environment Variables for Confluent Test Framework
# Copy this file to .env and update with your actual values

# Confluent Cloud Credentials
CONFLUENT_CLOUD_API_KEY=your-confluent-api-key-here
CONFLUENT_CLOUD_API_SECRET=your-confluent-api-secret-here

# Confluent Cloud Environment and Cluster IDs
# These will be populated automatically if you run create-confluent-environments.sh
CONFLUENT_ENVIRONMENT_ID=env-your-environment-id
CONFLUENT_CLUSTER_ID=lkc-your-cluster-id

# GitLab Configuration (for CI/CD)
GITLAB_URL=http://gitlab.local:8080
GITLAB_TOKEN=your-gitlab-access-token

# Test Configuration
TEST_PREFIX=local-test
TEST_TIMEOUT_MINUTES=30

# External Service Configuration (Optional)
# S3 Configuration for connector testing
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
TEST_S3_BUCKET=your-test-s3-bucket
TEST_S3_REGION=us-west-2

# Database Configuration for sink connector testing
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/testdb

# Notification Configuration
TEST_NOTIFICATION_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Confluent Cloud Login (for automated environment creation)
CONFLUENT_CLOUD_EMAIL=your-confluent-email@example.com
CONFLUENT_CLOUD_PASSWORD=your-confluent-password

# Environment Creation Flags
CREATE_DEV=true
CREATE_STAGING=true
CREATE_PROD=false  # Set to true only if needed
